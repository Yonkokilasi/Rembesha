<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bubbles.rembesha.MainActivity"
    android:background="@drawable/landing">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="The make-up search engine"
        android:textSize="40sp"
        android:paddingLeft="60dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a brand e.g maybelline"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/brand"
        android:textColor="@color/orange"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a type e.g eyeliner"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/product_type"
        android:textColor="@color/badge"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a category e.g lipstick"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/product_category"
        android:textColor="@color/badge"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:id="@+id/searchButton"
        android:background="@color/white"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>
